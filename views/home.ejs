<%- include('./partials/header.ejs') %>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1>home page</h1>
                <div class="table-responsive">
                    <% if (users.length > 0) { %>
                        <table class="table table-striped text-center my-3">
                            <thead>
                                <tr class="table table-dark">
                                    <th>ID</th>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>E-Mail</th>
                                    <th>Phone</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                               <% users.forEach((row, index) => { %>
                                <tr>
                                    <td> <%=index%> </td>
                                    <td><img src="<%=row.image%>" width="50" class="img-thumbnail" alt=""></td>
                                    <td><%=row.name%></td>
                                    <td><%=row.email%></td>
                                    <td><%=row.phone%></td>
                                    <td>
                                        <a href="/edit/<%=row.id%>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                        <a href="/delete/<%=row.id%>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                    </td>
                                </tr>
                               <% }) %>
                            </tbody>
                        </table>   
                    <% } else{ %>
                        <h1> <div class="text-center text-secondary mt-5"> No User Found in Db</div> </h1>
                        <%}%>

                </div>
            </div>
        </div>
    </div>
<%- include('./partials/footer.ejs') %>
